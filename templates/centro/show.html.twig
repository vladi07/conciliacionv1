{% extends 'base.html.twig' %}

{% block title %}Centro{% endblock %}

{% block body %}
    <h1>Centro</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ centro.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ centro.nombre }}</td>
            </tr>
            <tr>
                <th>Direccion</th>
                <td>{{ centro.direccion }}</td>
            </tr>
            <tr>
                <th>Matricula</th>
                <td>{{ centro.matricula }}</td>
            </tr>
            <tr>
                <th>Tipo</th>
                <td>{{ centro.tipo }}</td>
            </tr>
            <tr>
                <th>Telefono</th>
                <td>{{ centro.telefono }}</td>
            </tr>
            <tr>
                <th>Correo</th>
                <td>{{ centro.correo }}</td>
            </tr>
            <tr>
                <th>Departamento</th>
                <td>{{ centro.departamento.nombre }}</td>
            </tr>
        </tbody>
    </table>


    <a class="btn btn-info" href="{{ path('centro_edit', {'id': centro.id}) }}">
        <i class="bi bi-pencil-square"></i>
        Editar
    </a>

    {{ include('centro/_delete_form.html.twig') }}

    <div class="row">
        <div class="col-6">
            <table class="table">
                <thead>
                <th>Nombre</th>
                <th>Fecha Creacion</th>
                </thead>
                <tbody>
                {% for sala in centro.salas %}
                    <tr>
                        <td>{{ sala.nombre }}</td>
                        <td>{{ sala.fechaCreacion|date("d/m/Y") }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="col-6">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button type="submit">Guardar nueva sala</button>
            {{ form_end(form) }}
        </div>
    </div>
    <h1>Salas</h1>

    <a class="btn btn-primary" href="{{ path('centro_index') }}">
        <i class="bi bi-arrow-return-left"></i>
        Volver a lista anterior
    </a>


{% endblock %}
