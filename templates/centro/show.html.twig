{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }}|Centro|Ver
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            {# Columna con Datos del Centro #}
            <div class="col-sm">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title">
                            <h2>Datos del Centro</h2>
                        </div>
                        <table class="table table-striped table-hover">
                            <tbody>
                            <tr>
                                <th>Nro</th>
                                <td>{{ centro.id }}</td>
                            </tr>
                            <tr>
                                <th>Matricula</th>
                                <td>{{ centro.matricula }}</td>
                            </tr>
                            <tr>
                                <th>Nombre</th>
                                <td>{{ centro.nombre }}</td>
                            </tr>
                            <tr>
                                <th>Dirección</th>
                                <td>{{ centro.direccion }}</td>
                            </tr>
                            <tr>
                                <th>Tipo</th>
                                <td>{{ centro.tipo }}</td>
                            </tr>
                            <tr>
                                <th>Teléfono</th>
                                <td>{{ centro.telefono }}</td>
                            </tr>
                            <tr>
                                <th>Correo</th>
                                <td>{{ centro.correo }}</td>
                            </tr>
                            <tr>
                                <th>Departamento</th>
                                <td>{{ centro.departamento.nombre }}</td>
                            </tr>
                            </tbody>
                        </table>
                        <hr>
                        {# boton VOLVER #}
                        <a class="btn btn-primary" href="{{ path('centro_index') }}">
                            <i class="bi bi-arrow-return-left"></i>
                            Volver
                        </a>
                        {# boton EDITAR #}
                        <a class="btn btn-success" href="{{ path('centro_edit', {'id': centro.id}) }}">
                            <i class="bi bi-pencil-square"></i>
                            Editar
                        </a>
                        {# boton ELIMINAR #}
                        <a class="btn">
                            {{ include('centro/_delete_form.html.twig') }}
                        </a>
                    </div>
                </div>
            </div>
            {# Card para Añadir y Ver Salas #}
            <div class="col-sm">
                {# Card para AÑADIR y VER SALAS #}
                <div class="card">
                    <div class="card-body">
                        <h3>Añadir Salas</h3>
                        {{ form_start(form) }}
                        {# Renderizamos el formulario que esta en Show del Controller #}
                        {{ form_widget(form) }}
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i>
                            Guardar Sala
                        </button>
                        {{ form_end(form) }}
                        <hr>
                        <table class="table">
                            <thead>
                            <th>Nombre</th>
                            <th>Fecha Creación</th>
                            <th>Acciones</th>
                            </thead>
                            <tbody>
                            {# Creo sala=objeto en  objeto=centro campo=sala#}
                            {% for sala in centro.sala %}
                                <tr>
                                    <td>{{ sala.nombre }}</td>
                                    <td>{{ sala.fechaCreacion|date("d/m/Y") }}</td>
                                    <td>
                                        <a class="btn btn-success" href="{{ path('salas',{'id':sala.id}) }}">
                                            <i class="bi bi-pencil-square"></i> Editar
                                        </a>
                                        <a class="btn btn-danger" href="{{ path('Nueva_sala', {'id':sala.id}) }}">
                                            <i class="bi bi-pencil-square"></i> Eliminar
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}
