{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }}|Agenda|Edit
{% endblock %}

{% block body %}
    <div class="container d-flex justify-content-center">
        <div class="card">
            <div class="card-body">
                <h3 class="font-weight-bold">Editar Agenda</h3>
                {{ include('agenda/_form.html.twig', {'button_label': 'Guardar'}) }}

                <a class="btn btn-primary" href="{{ path('agenda_index') }}">
                    <i class="bi bi-arrow-return-left"></i>
                    Volver
                </a>
                <a class="btn">
                    {{ include('agenda/_delete_form.html.twig') }}
                </a>
            </div>
        </div>
    </div>
{% endblock %}
