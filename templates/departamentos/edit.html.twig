{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }}|Departamento|Edit
{% endblock %}

{% block body %}
    <div class="container d-flex justify-content-center">
        <div class="card">
            <div class="card-body">
                <h3 class="font-weight-bold">Editar Departamento</h3>

                {{ include('departamentos/_form.html.twig', {'button_label': 'Guardar'}) }}

                <a class="btn btn-primary" href="{{ path('departamentos_index') }}">
