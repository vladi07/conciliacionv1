{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }}|Departamentos|Detalle
{% endblock %}

{% block body %}
    <div class="container d-flex justify-content-center">
        <div class="card">
            <div class="card-body">
                <h3 class="font-weight-bold">Departamentos</h3>
                <table class="table table-striped">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ departamento.id }}</td>
                    </tr>
                    <tr>
                        <th>Nombre</th>
                        <td>{{ departamento.nombre }}</td>
                    </tr>
                    </tbody>
                </table>
                <hr>
                <button class="btn">
                    <a class="btn btn-primary" href="{{ path('departamentos_index') }}">
                        <i class="bi bi-arrow-return-left"></i>
                        Volver
                    </a>
                    <a class="btn btn-success" href="{{ path('departamentos_edit', {'id': departamento.id}) }}">
                        <i class="bi bi-pencil-square"></i>
                        Editar
                    </a>
                    {{ include('departamentos/_delete_form.html.twig') }}
                </button>
            </div>
        </div>
    </div>
{% endblock %}
